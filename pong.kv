<NoLiBall>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size 

<NoLiPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size


<NoLiGame>:
    ball: noli_ball
    player1: player_left
    player2: player_right
    
    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)
    
    NoLiBall:
        id: noli_ball
        center: self.parent.center
        
    NoLiPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    NoLiPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y
